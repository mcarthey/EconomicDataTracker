{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=EconomicDataTracker;Trusted_Connection=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Critical"
      }
    },
    "File": {
      "LogLevel": {
        "Default": "Trace"
      },
      "Path": "Logs/log.txt", // You can use this to specify the file path
      "FileSizeLimitBytes": 10485760, // Example: 10 MB max file size
      "MaxRollingFiles": 5, // Number of rolling log files
      "Append": true,
      "MinLevel": "Trace"
    }
  }
}
